<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Riders" parent="android:Theme.Material.Light.NoActionBar" />
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation
        duration. -->
        <!--        <item name="windowSplashScreenBackground">#FFCF7F</item>-->
        <item name="android:windowBackground">#fcfeff</item>

        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/apple</item>
        <!-- Required for animated icons. -->
        <item name="windowSplashScreenAnimationDuration">100</item>

        <!-- Set the theme of the Activity that directly follows your splash
        screen. This is required. -->
        <item name="postSplashScreenTheme">@style/Theme.SplashScreen</item>

        <!-- set icon background -->
        <item name="windowSplashScreenIconBackgroundColor">#c622dd</item>
    </style>
</resources>